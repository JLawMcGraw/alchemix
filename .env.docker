# AlcheMix Docker Compose Environment Variables
# Copy this file to .env before running docker-compose up

# OpenAI API Key (required for MemMachine embeddings)
OPENAI_API_KEY=your-openai-api-key-here

# JWT Secret (required for authentication)
JWT_SECRET=your-jwt-secret-here-minimum-32-chars

# Anthropic API Key (required for AI Bartender)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Database Credentials (these match docker-compose.yml)
NEO4J_USER=neo4j
NEO4J_PASSWORD=alchemixpassword
POSTGRES_USER=memmachine
POSTGRES_PASSWORD=memmachinepassword
POSTGRES_DB=memmachine

# Services URLs (automatically configured in docker-compose)
# MemMachine v2 API - connects directly to memmachine service (bar-server obsolete)
MEMMACHINE_API_URL=http://memmachine:8080
FRONTEND_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3000
