{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@alchemix/types": ["../packages/types/src/index.ts"],
      "@alchemix/types/*": ["../packages/types/src/*"]
    }
  },
  "include": ["src/**/*", "../packages/types/src/**/*"],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts", "src/tests/**/*"]
}
